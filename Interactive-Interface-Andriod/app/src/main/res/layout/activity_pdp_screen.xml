<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pdp_product_image"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:elevation="24dp"
        app:srcCompat="@drawable/o8901764175022" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="PRICE:"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pdp_product_price"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="$4"
                android:textColor="@android:color/holo_green_light"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_expiry_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="EXPIRY:"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pdp_product_expiry"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="28/12/2018"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pdp_product_name_tag"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Product Name:" />

        <TextView
            android:id="@+id/pdp_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Coca Cola"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/pdp_shelf_id_tag"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Shelf" />

    <TextView
        android:id="@+id/pdp_shelf_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="1000"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/pdp_product_ingredient_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTS:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdp_product_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_energy_tag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="ENERGY" />

            <TextView
                android:id="@+id/pdp_product_energy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_carbohydrate_tag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="CARBOHYDRATE" />

            <TextView
                android:id="@+id/pdp_product_carbohydrate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_sugar_tag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="SUGAR" />

            <TextView
                android:id="@+id/pdp_product_sugar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_protien_tag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="PROTIEN" />

            <TextView
                android:id="@+id/pdp_product_protien"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pdp_product_fat_tag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="FAT" />

            <TextView
                android:id="@+id/pdp_product_fat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/pdp_product_ingredient_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Products"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pdp_product_image1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/cell_shape"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/o8901764175022" />

        <ImageView
            android:id="@+id/pdp_product_image2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/cell_shape"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/o8901764175022" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pdp_product_name1"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:text="Coca Cola"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdp_product_name2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:text="Coca Cola"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    </LinearLayout>




